---
pagination:
  data: collections.videos
  size: 3
  alias: list
  reverse: true
permalink: "videos/{% if pagination.pageNumber > 0 %}pagina-{{ pagination.pageNumber + 1 }}/{% endif %}index.html"
---

{% extends "src/base.njk" %}

{% block head %}
    <title>JusticiaPedia | Videos</title>
{% endblock %}

{% block content %}

        <!-- Content
		============================================= -->
		<section id="content">
			<div class="content-wrap">

                <!-- Slider
				============================================= -->

				<div class="section m-0 py-6" style="background-color: #90c1db">
					<div class="container">
						<div class="row justify-content-center">

							<div class="col-lg-6 col-sm-12 order-2 order-lg-1 text-center">
								
                                <h1 class="titulo_slider">Videos</h1>
							</div>
							
						</div>
					</div>
				</div>

                <!-- event-area-start -->
                <div class="section m-0 py-6" style="background-color: #fff">
					<div class="container">
						<div class="row">
                        
                            {% if list%}
                            {% for item in list%}

                            <div class="col-md-4 col-lg-4 col-sm-12  my-4">
                                <div class="cuadro_blog h-100">
                                    {{item.data.link | safe}}
                                    <div class="px-4 py-4 text-left">
                                        <i class="fa-solid fa-calendar"></i><span class="text-sm">
                                        {{item.data.date | dateFormat('DD/MM/YYYY')}}
                                        </span><br>
                                        <br>
                                        <h5 class="font-bold text-lg">
                                        {{item.data.title }}
                                        </h5>
                                        
                                        <span class="text-sm">
                                        {{item.data.description}}
                                        </span>
                                        
                                    </div>

                                </div>
                            </div>
                            {% endfor %}
                            {% endif %}

                            <div class="d-flex justify-content-center my-4">
                                {% if pagination.href.previous %}
                                <div class="mx-4">
                                    {% if pagination.href.previous %}<a href="{{ pagination.href.previous }}">← Videos más recientes</a>{% else %}←  Nuevos Videos{% endif %}
                                </div>
                                {% endif %}
                                {% if pagination.href.next %}
                                <div class="mx-4">
                                    {% if pagination.href.next %}<a href="{{ pagination.href.next }}">Videos anteriores →</a>{% else %}Videos anteriores →{% endif %}
                                </div>
                                {% endif %}
                            </div>

                        </div>

                    </div>

                </div>
            </div>
        </section>

{% endblock %}