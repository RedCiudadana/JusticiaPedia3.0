{% extends "src/base.njk" %}

{% block head %}
<title>Elección Cortes | JusticiaPedia</title>

{% endblock %}

{% block content %}

        <section id="content px-4">
			<div class="content-wrap">

				<!-- Slider
				============================================= -->

				<div class="section m-0 py-4" style="background-color: #90c1db">
					<div class="container pb-2">
						<div class="row">
                            <div class="col-lg-6 my-4 py-6 px-6">
                                <img src="/elementos/eleccion_cortes/ec-08.png">
                            </div>
							<div class="col-lg-6 my-4 py-6">
                                <h1 class="font-weight-600 mb-4" style="color: #fff!important;font-size: 45px;line-height: 40px;">Elección de Cortes 2024
                                </h1>
                                <p class="texto_slider mb-4" style="font-size: 20px;">Aquí encontrarás información detallada sobre el proceso, aspirantes, los criterios de selección y las decisiones de las comisiones de postulación.
                                </p>
                                <a href="https://share.hsforms.com/1-ncLECRJR7SOyNuhPLxgpgrhae7" class="btn_especiales22">Suscribirse <i class="fa-solid fa-caret-down"></i></a>
							</div>
							
							
						</div>
					</div>
				</div>


                <!-- Content
				============================================= -->

				<div class="section m-0 py-6" style="background-color: #f1f4fa">

                    <div class="container">
                        <div class="row pb-6">
                            <div class="col-lg-12 mb-4">
                                <h1 style="font-size:30px">¿En qué etapa se encuentra el proceso?</h1>
                            </div>
                            
                            <div class="col-lg-4">
                                <div class="cuadro_etapas ">
                                    <img style="height: 120px;" src="/elementos/eleccion_cortes/ec-09.png">
                                    <h1>Paso 6</h1>
                                    <h3>20 al 23 de septiembre de 2024</h3>
                                    <p>Votación y elaboración de nómina de candidatos</p>
                                </div>
                            </div>

                            <div class="col-lg-4">
                                <div class="cuadro_etapas">
                                    <img style="height: 120px;" src="/elementos/eleccion_cortes/ec-10.png">
                                    <h1>Paso 7</h1>
                                    <h3>24 de septiembre de 2024</h3>
                                    <p>Entrega de la nómina al Congreso de la Repùblica y publicación en el Diario Oficial</p>
                                </div>
                            </div>

                            <div class="col-lg-4">
                                <div class="cuadro_etapas cuadro_etapas_active">
                                    <img style="height: 120px;" src="/elementos/eleccion_cortes/ec-11.png">
                                    <h1>Paso 8</h1>
                                    <h3>A más tardar el 13 de octubre de 2024</h3>
                                    <p>Elección de Magistrados de CSJ y CA en el Congreso de la República</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="container">
                        <div class="row p-4" style="background-color: #fff; /*position:relative;top:-200px;z-index:5*/">
                            <div class="col-lg-12">
                                <h1 style="font-size:30px">Personas de Interés</h1>
                            </div>

                            {% for perfil in collections.perfiles | filtrarPorInstitucion("institution-1") %}
                            <div class="col-lg-3 col-sm-12 order-2 order-lg-1 text-center my-2">

                                <div class="cuadro_perfil2 h-100">
                                    <div class="imagen-container">
                                    {% if perfil.data.perfiles.fotoURL %}
                                    <img class="imagen-principal" src="{{perfil.data.perfiles.fotoURL}}" alt="Imagen Principal" />
                                    <img class="imagen-respaldo" src="/elementos/ICONOS/JUSTICIAPEDIA_02-21.png" alt="Imagen de Respaldo" style="display: none;" />
                                    {% else %}
                                        {% if perfil.data.perfiles.sexo === "Masculino" %}
                                        <img class="imagen-respaldo" src="/elementos/ICONOS/JUSTICIAPEDIA_02-21.png" alt="Imagen de Respaldo" />
                                        {% else%}
                                        <img class="imagen-respaldo" src="/elementos/ICONOS/JUSTICIAPEDIA_02-22.png" alt="Imagen de Respaldo" />
                                        {% endif %}
                                    {% endif %}
                                    </div>

                                    <div class="p-4">
                                    <h1 class="mb-4">{{perfil.data.perfiles.nombre}}</h1>
                                    <a href="/perfiles/{{perfil.data.perfiles.id}}/{{perfil.data.perfiles.nombre | slug}}/index.html" class="btn_especiales2">Ver Perfil<i class="fa-solid fa-caret-right"></i></a>
                                    </div>
                                </div>
                    
                            </div>
                            {% endfor %}
 
                        </div>
                    </div>

                    <div class="container">
                        <div class="row py-4">
                            <div class="col-lg-12">
                                <h1 style="font-size:30px">Aspirantes</h1>
                            </div>
                            <div class="col-lg-12 my-2">
                                
                                <div class="table-container">
                                    <div class="table-header">
                                        <div class="table-cell" style="flex:0.3"><i class="fa-regular fa-user" style="padding-right:5px"></i>Candidato</div>
                                        <div class="table-cell"></div>
                                        <div class="table-cell"><i class="fa-solid fa-lock" style="padding-right:5px"></i>Cargo</div>
                                        <div class="table-cell"></div>
                                    </div>
                                    <div class="table-body">
                                        {% for perfil in collections.perfiles | filtrarPorEleccion("institution-1") | limit(5) %}
                                        <div class="table-row">
                                            <div class="table-cell" style="flex:0.3">
                                                {% if perfil.data.perfiles.fotoURL %}
                                                <img class="imagen-principal" style="height:50px" src="{{perfil.data.perfiles.fotoURL}}" alt="Imagen Principal" />
                                                <img class="imagen-respaldo" src="/elementos/ICONOS/JUSTICIAPEDIA_02-21.png" alt="Imagen de Respaldo" style="display: none;" />
                                                {% else %}
                                                    {% if perfil.data.perfiles.sexo === "Masculino" %}
                                                    <img class="imagen-respaldo" src="/elementos/ICONOS/JUSTICIAPEDIA_02-21.png" alt="Imagen de Respaldo" />
                                                    {% else%}
                                                    <img class="imagen-respaldo" src="/elementos/ICONOS/JUSTICIAPEDIA_02-22.png" alt="Imagen de Respaldo" />
                                                    {% endif %}
                                                {% endif %}
                                            </div>
                                            <div class="table-cell"> {{perfil.data.perfiles.nombre}}</div>
                                            <div class="table-cell">{{perfil.data.perfiles.puesto}}</div>
                                            <div class="table-cell" style="display:block;text-align:center">
                                                <a href="/perfiles/{{perfil.data.perfiles.id}}/{{perfil.data.perfiles.nombre | slug}}/index.html" class="btn_especiales2">Ver Perfil <i class="fa-solid fa-caret-right"></i></a>
                                            </div>
                                        </div>
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>
                            <div style="height:40px;width:100%"></div>
                            <div class="col-lg-12 text-center">
                                <a class="btn_especiales2" href="/comision/comision-de-postulacion-de-fiscal-general-y-jefe-del-ministerio-publico-(mp)/index.html">Ver más perfiles</a>
                            </div>
                        </div>


                        <div class="row py-4">
                            <div class="col-lg-12">
                                <h1 style="font-size:30px">Comisionados</h1>
                            </div>
                            <div class="col-lg-12 my-2">
                                
                                <div class="table-container">
                                    <div class="table-header">
                                        <div class="table-cell" style="flex:0.3"><i class="fa-regular fa-user" style="padding-right:5px"></i>Comisionado</div>
                                        <div class="table-cell"></div>
                                        <div class="table-cell"><i class="fa-solid fa-lock" style="padding-right:5px"></i>Cargo</div>
                                        <div class="table-cell"></div>
                                    </div>
                                    <div class="table-body">
                                        {% for perfil in collections.perfiles | filtrarPorComision("election-5") | limit(5) %}
                                        <div class="table-row">
                                            <div class="table-cell" style="flex:0.3">
                                                {% if perfil.data.perfiles.fotoURL %}
                                                <img class="imagen-principal" style="height:50px" src="{{perfil.data.perfiles.fotoURL}}" alt="Imagen Principal" />
                                                <img class="imagen-respaldo" src="/elementos/ICONOS/JUSTICIAPEDIA_02-21.png" alt="Imagen de Respaldo" style="display: none;" />
                                                {% else %}
                                                    {% if perfil.data.perfiles.sexo === "Masculino" %}
                                                    <img class="imagen-respaldo" src="/elementos/ICONOS/JUSTICIAPEDIA_02-21.png" alt="Imagen de Respaldo" />
                                                    {% else%}
                                                    <img class="imagen-respaldo" src="/elementos/ICONOS/JUSTICIAPEDIA_02-22.png" alt="Imagen de Respaldo" />
                                                    {% endif %}
                                                {% endif %}
                                            </div>
                                            <div class="table-cell">{{perfil.data.perfiles.nombre}}</div>
                                            <div class="table-cell">{{perfil.data.perfiles.puesto}}</div>
                                            <div class="table-cell" style="display:block;text-align:center">
                                                <a href="/perfiles/{{perfil.data.perfiles.id}}/{{perfil.data.perfiles.nombre | slug}}/index.html" class="btn_especiales2">Ver Perfil <i class="fa-solid fa-caret-right"></i></a>
                                            </div>
                                        </div>
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>
                            <div style="height:40px;width:100%"></div>
                            <div class="col-lg-12 text-center">
                                <a class="btn_especiales2" href="/comision/comision-de-postulacion-de-fiscal-general-y-jefe-del-ministerio-publico-(mp)/index.html">Ver más perfiles</a>
                            </div>
                        </div>
                    </div>

                    <div class="container">
                        <div class="row mb-4">
                            <div class="col-lg-12">
                                <h1 style="font-size:30px">Lo Último</h1>
                            </div>
                        </div>
                        {% for novedad in collections.novedades | reverse | filtrarPorEleccionBlogs("EleccionCortes") | limit(1) %}
                        <div class="row">
                            <div class="col-lg-6">
                                <img src="{{ novedad.data.image }}" alt="novedad" class="h-100">
                            </div>
                            <div class="col-lg-6" style="background-color:#fff">
                                <div class="p-4 my-auto" style="text-align:left">
									<h5 class="font-bold text-lg">
									{{novedad.data.title }}
									</h5>
									<span class="text-sm">
									{{novedad.data.date | dateFormat('DD/MM/YYYY')}}
									</span><br>
									<span class="text-sm">
									{{novedad.data.description}}
									</span>
                                    <br><br>
                                    <span class="text-sm">
                                    <a href="{{novedad.url}}" class="btn_especiales2 my-2">Ver Noticia <i class="fa-solid fa-caret-right"></i></a>
                                    </span>
								</div>
                            </div>
                        </div>
                        {% endfor %}

                        <div class="row my-4" >
                        {% for novedad in collections.novedades | reverse | filtrarPorEleccionBlogs("EleccionCortes") | limitPart(1,3) %}
                        
                            <div class="col-lg-6" >
                                <div style="background-color:#fff;height:100%">
                                    <img src="{{ novedad.data.image }}" alt="novedad">
                                    <div class="p-4 my-auto" style="text-align:left">
                                        <h5 class="font-bold text-lg">
                                        {{novedad.data.title }}
                                        </h5>
                                        <span class="text-sm">
                                        {{novedad.data.date | dateFormat('DD/MM/YYYY')}}
                                        </span><br>
                                        <span class="text-sm">
                                        {{novedad.data.description}}
                                        </span>
                                        <br><br>
                                        <span class="text-sm">
                                        <a href="{{novedad.url}}" class="btn_especiales2 my-2">Ver Noticia <i class="fa-solid fa-caret-right"></i></a>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        
                        {% endfor %}
                        </div>
                    </div>
      
				</div>

            </div>
        </section>

{% endblock %}
