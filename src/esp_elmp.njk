                            <div class="col-lg-3 col-sm-12 order-2 order-lg-1 text-center my-2">

                                <div class="cuadro_perfil2 h-100">
                                    <div class="imagen-container">
                                    {% if perfil.data.perfiles.fotoURL %}
                                    <img class="imagen-principal" src="{{perfil.data.perfiles.fotoURL}}" alt="Imagen Principal" />
                                    <img class="imagen-respaldo" src="/elementos/ICONOS/JUSTICIAPEDIA_02-21.png" alt="Imagen de Respaldo" style="display: none;" />
                                    {% else %}
                                    <img class="imagen-respaldo" src="/elementos/ICONOS/JUSTICIAPEDIA_02-21.png" alt="Imagen de Respaldo" />
                                    {% endif %}
                                    </div>

                                    <div class="p-4">
                                    <h1 class="mb-4">{{perfil.data.perfiles.nombre}}</h1>
                                    <a href="/perfiles/{{perfil.data.perfiles.id}}/{{perfil.data.perfiles.nombre | slug}}/index.html" class="btn_especiales">Ver Perfil<i class="fa-solid fa-caret-right"></i></a>
                                    </div>
                                </div>
                    
                            </div>
                            {% endif %}
                            {% endfor %}
 
                        </div>
                    </div>

                    <div class="container">
                        <div class="row py-4">
                            <div class="col-lg-12">
                                <h1 style="font-size:30px">Candidaturas</h1>
                            </div>
                            <div class="col-lg-12 my-2">
                                
                                <div class="table-container">
                                    <div class="table-header">
                                        <div class="table-cell"><i class="fa-regular fa-user" style="padding-right:5px"></i>Candidato</div>
                                        <div class="table-cell"><i class="fa-solid fa-lock" style="padding-right:5px"></i>Cargo</div>
                                        <div class="table-cell"></div>
                                    </div>
                                    <div class="table-body">
                                        {% for perfil in collections.perfiles | filtrarPorEleccion("election-2") | limit(5) %}
                                        <div class="table-row">
                                            <div class="table-cell">
                                                {% if perfil.data.perfiles.fotoURL %}
                                                <img class="imagen-principal" src="{{perfil.data.perfiles.fotoURL}}" alt="Imagen Principal" />
                                                <img class="imagen-respaldo" src="/elementos/ICONOS/JUSTICIAPEDIA_02-21.png" alt="Imagen de Respaldo" style="display: none;" />
                                                {% else %}
                                                <img class="imagen-respaldo" src="/elementos/ICONOS/JUSTICIAPEDIA_02-21.png" alt="Imagen de Respaldo" />
                                                {% endif %}
                                                {{perfil.data.perfiles.nombre}}
                                            </div>
                                            <div class="table-cell">{{perfil.data.perfiles.puesto}}</div>
                                            <div class="table-cell" style="display:block;text-align:center">
